---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "@lib/utils";
type Props = {
  blog: CollectionEntry<"blog">;
};

const { blog } = Astro.props;
---

<a href={`/blog/${blog.slug}`} class="cursor-pointer flex flex-col justify-between p-8 h-64 bg-neutral-900 border border-neutral-700 hover:border-rose-400 hover:text-rose-400 rounded-lg">
  <div class="space-y-2">
    <h3 class="text-2xl font-medium">{blog.data.title}</h3>
    <p class="font-mono font-light text-sm text-neutral-500">{blog.data.tags[0]}</p>
  </div>
  <p class="font-mono">{formatDate(blog.data.createdDate)}</p>
</a>
